.posthead
  .title
    -if title_link
      =link_to post.title, show_posts_url(:year => post.created_at.year, :month => post.created_at.month, :day => post.created_at.day, :slug => post.slug)
    -else
      #{post.title}
  .datetime
    =render :partial => 'common/datetime', :object => post
    .poster
      =render :partial => 'common/byline', :object => post.poster
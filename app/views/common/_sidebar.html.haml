.section
  .secthead
    Navigation
  .sectbody
    %p
      =link_to 'Latest Entries', root_url
    %p
      =link_to 'About this Blog', about_url
    %p
      %a{:href=>bio_path}
        Who
        %i
          %b is
        this guy?
    %p
      %a{:href=>'#'}Contact Me
    -if current_user && (current_user.has_role? 'poster')
      =link_to 'Create a new post', new_post_url
-counts = counts_for_archive
-unless counts.empty?
  .section
    .secthead
      Archive
    .sectbody
      -counts.each do |year, data|
        .year=link_to "#{year} (#{data[0]})", show_posts_url(:year => year, :month => nil, :day => nil, :slug => nil)
        -data[1..data.length - 1].each do |month|
          -month.each do |name, count|
            .month=link_to "#{name} (#{count})", show_posts_url(:year => year, :month => DateTime::MONTHNAMES.index(name), :day => nil, :slug => nil)
-unless Post.tag_counts.length < 1
  .section
    .secthead
      Tags
    .sectbody
      -tag_cloud tags_for_cloud, %w(tag1 tag2 tag3 tag4) do |tag, css_class|
        =link_to "#{tag.name}&nbsp; ", tag_search_path(:action => :tag, :tag_name => tag.name), :class => css_class
.section
  .secthead
    Recent Tweets
  .sectbody
    %p A recent tweet
    %p.tweet Another recent tweet
    %p.tweet A longer tweet about how great OAuth is and how much we like social media and Twitter and such
    %p.tweet Tweet.
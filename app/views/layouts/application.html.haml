!!! XML
!!!
%html
  %head
    %title
      -unless @page_title.nil?
        #{@page_title}
      - else
        #{DEFAULT_SITE_NAME} - #{DEFAULT_TITLE}
    %link{ :rel=>'shortcut icon', :href=>'/favicon.ico', :type=>'image/vnd.microsoft.icon'}
    %link{ :rel=>'icon', :href=>'/favicon.ico', :type=>'image/vnd.microsoft.icon'}
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery.markitup', 'markitup-markdown-set', 'application', :cache => 'cache/all'
    = stylesheet_link_tag 'markitup-markdown', 'markitup-skin', 'screen.css', :cache => 'cache/visual', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    %script{:type=>'text/javascript'}
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{WEB_PROPERTY_ID}']);
      _gaq.push(['_setDomainName', '#{ANALYTICS_DOMAIN}']);
      _gaq.push(['_trackPageview']);
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
      })();

  %body.styled
    #head_color
      .container
        #header
          #identityarea
            .nest
              %h1
                ="<span class='titlecolor'>Dev</span>Koans"
              .tagline A thought-provoking blog of things I know might be true
          #usernav
    #live_color
      .container
        #livearea
          #content
            =yield
          #sidebar
            -unless @skip_sidebar == true
              =render :partial => 'common/sidebar'
    #foot_color
      .container
        #footer
          Design and all contents of this website &copy; 2009#{DateTime::now().year == 2009 ? '' : " - #{DateTime::now().year}"} Jonathan D. Mischo  All rights reserved.
      .version{:style => 'font-size:.6em;color:#999;padding-bottom:2px;padding-right:2px;float:right'}
        #{APP_VERSION}
